{% comment %}
	This is for widgets that share content on Facebook.
	See the Facebook Linter: http://developers.facebook.com/tools/debug
{% endcomment %}
{% if page_description %}
	<meta property="og:description" content="{{ page_description | escape }}" />
{% endif %}
<meta property="og:type" content="video" />
<meta property="og:video" content="http://www.youtube.com/v/RPCx31CApck">
<meta property="og:video:secure_url" content="https://www.youtube.com/v/RPCx31CApck">
<meta name="video_type" content="application/x-shockwave-flash" />
<meta property="og:video:height" content="360" />
<meta property="og:video:width" content="640" />
<meta property="og:image" content="http://i.ytimg.com/vi/RPCx31CApck/maxresdefault.jpg">
<meta property="og:image" content="https://i.ytimg.com/vi/RPCx31CApck/maxresdefault.jpg">
<meta property="og:title" content="{{ page_title | escape }}" />
{% if settings.use_logo %}
	<meta property="og:image" content="http:{{ 'logo.png' | asset_url }}" />
	<meta property="og:image" content="https:{{ 'logo.png' | asset_url }}" />
{% endif %}
<meta property="og:url" content="{{ canonical_url }}" />
<meta property="og:site_name" content="{{ shop.name }}" />